<h1>Reviewed Books</h1>
<% if !@books.empty? %>
  <table border="1">
    <thead>
      <td>Title</td>
      <td>Author</td>
      <td>Year</td>
      <td>Fiction?</td>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
        <td><%= link_to(book.title, book_path(book.id)) %></td>
        <td><%= book.author %></td>
        <td><%= book.year %></td>
        <% if book.fiction %>
          <td>Fiction</td>
        <% else %>
          <td>Non-Fiction</td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br><a href="/books/new">Create new book</a><br>